<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/activity_prisoners_rules"
    android:background="#FF3F51B5">

    <TextView
        android:id="@+id/Rules_Title_Prisoners"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="12dp"
        android:text="Prisoners Dilemma:"
        android:textColor="#FFFFFF"
        android:textSize="42sp" />

    <TextView
        android:id="@+id/prisonersRules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Rules_Title_Prisoners"
        android:gravity="center"
        android:text="@string/prisonerRules"
        android:textAlignment="center"
        android:textColor="@color/cast_libraries_material_featurehighlight_text_body_color"
        android:textSize="22sp" />


</RelativeLayout>
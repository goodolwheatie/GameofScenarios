<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.memeinnovations.gameofscenarios.UserScenarioProfileFragment"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tvwWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/wins"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvwCurrWins"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvwLosses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/losses"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvwCurrLosses"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvwCurrWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="72dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvwCurrLosses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvwCurrWins" />

    <TextView
        android:id="@+id/tvwTotalGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/total_games"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvwCurrTotalGames"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvwCurrTotalGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvwCurrLosses"
        app:layout_constraintTop_toBottomOf="@+id/tvwCurrLosses" />
</android.support.constraint.ConstraintLayout>
